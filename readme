# db
docker run -d --name taiga_db postgres:9.5

# back
docker run -d --name taiga_back --link taiga_db:db quay.io/madron/taiga uwsgi

# front
docker run -d --name taiga_front --link taiga_back:back -p 80:80 quay.io/madron/taiga nginx


# Load sample data
# username: admin
# password: 123123
docker exec taiga_back python3 manage.py loaddata initial_user initial_project_templates initial_role
